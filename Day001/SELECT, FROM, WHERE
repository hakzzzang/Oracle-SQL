SELECT * FROM EMP;
SELECT ENAME,SAL,JOB FROM EMP ORDER BY SAL ASC;

#부서 테이블 조회
SELECT * FROM DEPT;
SELECT * FROM DEPARTMENTS;

SELECT MGR FROM EMP;
#MGR 값 중 고유한 값만 출력하려면???
SELECT DISTINCT MGR FROM EMP;

#월급(SAL)에 12를 곱하여 '연봉'컬럼을 만들어주세요
SELECT ENAME, SAL, (SAL*12) AS 연봉 FROM EMP;
#NULL을 제거하는 일반함수 NVL('',0)

#부서 번호가 30번인 부서원의 모든정보
SELECT * FROM EMP WHERE DEPTNO = 30;
#사원 번호가 7782인 사원의 정보를 출력
SELECT * FROM EMP WHERE EMPNO=7782;
#부서번호가 30번이면서 직업이 "SALESMAN"인 직원들은???
SELECT * FROM EMP;
SELECT * FROM EMP WHERE DEPTNO = 30 AND JOB = 'SALESMAN';
#사원번호가 7499, 부서번호가 30인 사원정보는???
SELECT * FROM EMP WHERE EMPNO=7499 AND DEPTNO=30;
#부서번호가 30 또는 직업이 'CLERK'인 사원정보는?
SELECT * FROM EMP WHERE DEPTNO=30 OR JOB = 'CLERK';
#급여가 3000 이상인 사원정보는?
SELECT * FROM EMP WHERE SAL >= 3000;
#급여가 2500 이상이고 직업이 ANALYST인 사원 정보는?
SELECT * FROM EMP WHERE SAL >= 2500 AND JOB = 'ANALYST';
